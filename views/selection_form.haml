%h3 Add Selection
%form{:id => "adddata", :action => "/validate-data", :method => "post"}
  %input{:type => "hidden", :value => "selection", :name => "submittype", :id =>"submittype"}
  %fieldset.selform
    %legend selection information:
    %p
      %label{:for => "selname"}
        %span name:
        %input{:type => "text", :name => "selname", :id => "selname", :required => true} 
        %strong 
          %abbr{:title => "required"}*
    %p
      %label{:for => "date"}
        %span date:
        %input{:type => "text", :name => "date", :id => "date", :value => "yyyy-mm-dd"} 
    %p
      %label{:for => "perf"}
        %span performed_by:
        %input{:type => "text", :name => "perf", :id => "perf"} 
  %fieldset.selform
    %legend target
    %p
      %label{:for => "dspecies"}
        %span species:
        = partial :formdrop, locals:{para: "dspecies", values:@species, column: :species, required: false}
    %p
      %label{:for => "dtissue"}
        %span tissue:
        %select{:name => "dtissue", :id => "dtissue"}
    %p
      %label{:for => "dcells"}
        %span cell:
        %select{:name => "dcell", :id => "dcell"}
  %fieldset.selform
    %legend
      related entities:
      %strong 
        %abbr{:title => "required"}*
    %label{:for => "dlibname"}
      %span library:
      = partial :formdrop, locals:{para: "dlibname", values:@libraries, column: :library_name, required: true}
  %input{:type => "submit", :value => "add selection"}
  %input{:type => "reset"}
