%h3 Add Peptide Result 
%form{:id => "adddata", :action => "#{url '/validate-data'}", :target => "notify",:method => "post", :enctype => "multipart/form-data"}
  %input{:type => "hidden", :value => "result", :name => "submittype", :id =>"submittype"}
  %fieldset.resform
    %legend result information:
    %p.formfield
      %label{:for => "perf"}
        %span performance:
        %textarea{:form => "adddata", :name =>"perf", :id => "perf"}
    %p
      %label{:for => "dtar"}
        %span target:
        %select{:name => "dtar", :id => "dtar"}
          %option
            &nbsp;
          - Target.order(:species).all do |tar|
            %option<
              = "" << tar[:species] << " - " << tar[:tissue] << " - " << tar[:cell]

  %fieldset.resform
    %legend
      related entities:
      %strong 
        %abbr{:title => "required"}*
    %label{:for => "ddsname"}
      %span sequencing dataset:
      = partial :formdrop, locals:{para: "ddsname", values:@datasets, column: :dataset_name, required: true}
    %p
      %label{:for => "pseq"}
        %span peptide sequence:
        %input{:type => "text", :id => "pseq", :name => "pseq", :required => true}
  %input{:type => "submit", :value => "add result"}
  %input{:type => "reset"}
#respage
  %iframe{:name => "notify", :id =>"notify"}

