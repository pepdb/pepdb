%h3 Add Library
%form{:id => "adddata", :action => "#{url '/validate-data'}", :method => "post", :target => "notify"}
  %input{:type => "hidden", :value => "library", :name => "submittype", :id =>"submittype"}
  %fieldset.libform
    %legend 
      library information:
    %p
      %label{:for => "libname"}
        %span name:
        %input.ui-corner-all{:type => "text", :name => "libname", :id => "libname", :required => true} 
        %strong
          %abbr{:title => "required"}*
    %p
      = partial :datalist, locals: {req: false, label:"enc", fieldname:"encoding scheme:", listname:"enclist", listlabel:"fbenc", dbdata:@schemes, columnname: :encoding_scheme} 
    %p
      = partial :datalist, locals: {req: false, label:"ca", fieldname:"carrier:", listname:"calist", listlabel:"fbca", dbdata:@carriers, columnname: :carrier} 
    %p
      = partial :datalist, locals: {req: false, label:"prod", fieldname:"produced by:", listname:"prodlist", listlabel:"fbprod", dbdata:@producers, columnname: :produced_by} 
    %p
      %label{:for => "insert"}
        %span insert length:
        %input{:type => "text", :name => "insert", :id => "insert"} 
    %p
      %label{:for => "diversity"}
        %span peptide diversity:
        %input{:type => "text", :name => "diversity", :id => "diversity"} 
    %p
      %label{:for => "date"}
        %span date:
        %input{:type => "text", :name => "date", :id => "date", :placeholder => "yyyy-mm-dd"} 
          
        
  %input{:type => "submit", :value => "add library"}
  %input{:type => "reset", :value => "reset fields"}

#respage
  %iframe{:name => "notify", :id =>"notify"}

