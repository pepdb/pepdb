%p 
  - if defined? dataset
    in dataset
    = dataset
%table.ui-widget
  %thead.ui-widget-header
    %tr
      %th{:colspan => 2}
        Summary of
        = element
  %tbody.ui-widget-content
    - data_to_display.each do |info|
      - info.each do |column|
        - if column[0] == :Origin
          %tr
            %td.seltar{:colspan => 2} Additional information
        - if column[0] == :Species
          %tr
            %td.seltar{:colspan => 2}
              = "Selection target" if type == "Selection"
              = "Sequencing target" if type == "Sequencing Dataset"
        - if column[0] == :Statistics
          %tr
            %td Overall reads
            %td 
              = pep_count
          %tr
            %td= column[0].to_s.tr('_', ' ')
            - if column[1].nil?
              %td no statistic file available
            - else
              %td= link_to("Statistic file" ,"stats/"+element, :target => "_blank")

        - elsif column[0] == :Dominance || column[0] == :Dominance_sum
          %tr
            %td= column[0].to_s.tr('_', ' ')
            %td= format_dominance(column[1])
        - elsif column[0] == :Parameters
          %tr
            %td Reads sum 
            %td= reads_sum
          %tr
            %td= column[0].to_s.tr('_', ' ')
            %td= column[1] 
        - elsif column[0] == :Peptide
          %tr
            %td Peptide Sequence
            %td 
              = column[1]
        - elsif column[0] == :Peptide_performance
          %tr
            %td.seltar{:colspan => 2}
              Peptide performance
          %tr
            %td{:colspan => 2}
              -if column[1].nil?
                not yet tested
              - else
                = column[1]
        - else
          %tr
            %td= column[0].to_s.tr('_', ' ')
            %td= column[1]
    - if defined? dna_data
      %tr
        %td.seltar{:colspan => 2}
          DNA sequences
      - dna_data.each_pair do |seq,reads|
        %tr
          %td= seq
          %td= reads
