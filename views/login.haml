!!! 5
%html{:lang=>"en"}
  %head
    %meta{:charset => "UTF-8"}
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge"}
    %meta{ :name =>"viewport", :content =>"width=device-width, initial-scale=1"}
    = stylesheet_link_tag("/bootstrap/css/bootstrap.min.css", "/bootstrap/css/bootstrap-theme.min.css" "/ilogin.css")
    =link_favicon_tag
    %title pepDB Login
  %body
    .jumbotron
      .container
        %h1 Welcome to pepDB!
        %p pepDB is a software application developed for storage and analysis of large datasets from randomized peptide libraries as used in viral or phage display
        %p pepDB was developed by Christian Casar with support by Timo Sieber, Malik Alawi and Stefan Kurtz  
    
    .container
      %form.form-signin{:role=>"form"}
        %h2 Please Login
        %input.form-control{:id => "user_username", :name => "username", :placeholder => "username"}
        %input.form-control{:id => "user_password", :name => "password", :placeholder => "password"}
        %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"}Login

    .login-box.ui-corner-all
      #loginlogo
        = image_tag("/images/pepdb_logo.png")
      .login-text
        %h2.page_title Login 
        %form{:action => "/login", :method => "post"}
          .field
            .label
              %label{:for => "user_user_name"} Username

            %input.ui-corner-all{:id => "user_username", :name => "username", :size => 30, :type => "text"}
          .field
            .label
              %label{:for => "user_password"} Password
            %input.ui-corner-all{:id => "user_password", :name => "password", :size => 30, :type => "password"}
            .buttons
              %input{:value => "Login", :type => "submit"}
          -if !flash[:error].nil?
            .ui-widget
              %div{:class => "ui-state-error ui-corner-all", :id => "errorbox"}
                %p
                  %span{:class => "ui-icon ui-icon-alert", :id => "errorspan"}
                    %p
                      = flash[:error]
