!!! 5
%html
  %head
    %meta{:charset => "UTF-8"}
      = stylesheet_link_tag("/jquery-ui-1.10.3.custom.min.css", "/jquery.dataTables_themeroller.css" , "/TableTools.css", "/style.css")
      =link_favicon_tag
      %title pepDB Login
  %body
    .login-box
      %h1.page_title pepDB Login 
      %form{:action => "/login", :method => "post"}
        .field
          .label
            %label{:for => "user_user_name"} Username

          %input{:id => "user_username", :name => "username", :size => 30, :type => "text"}
        .field
          .label
            %label{:for => "user_password"} Password
          %input{:id => "user_password", :name => "password", :size => 30, :type => "password"}
        .buttons
          %input{:value => "Login", :type => "submit"}
        = flash[:error]
