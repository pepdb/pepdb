= partial :modal, locals: {id:"infomodal", modal_title:"Selection browsing details", modal_category:"data-browsing", modal_type:"Selection"}
.page-header
  %h2
    Browse by Selection
    %button.btn-xs.btn-info{"data-toggle"=>"modal", "data-target"=>"#infomodal"} details


%input{:type => "hidden", :id => "navbarsec", :value => "browse"}
%input{:type => "hidden", :id => "reftype", :value => "Selection"}
.row
  .col-md-4
    #selectedinfo
      - if params.size != 0
        %p
          = partial :info_tables, locals: {type:@eletype, data_to_display:@infodata.where(:selection_name => "#{params[:sel_name]}"), element: "#{h params[:sel_name]}"}
  .col-md-8
    #selectdata
      = partial :tables, locals: {table_class: "display", table_id:"select_table", choice:"#{params[:sel_name]}", first_data_to_display:@selections, second_data_to_display:@selections}
.row
  #showdata
  .col-md-4
    #datainfo
  .col-md-8#selecteddata
    - if params.size != 0
      %input{:type => "hidden", :id => "refelem1", :value => "#{params[:ele_name]}"}
      %h4
        = "Sequencing Datasets in Selection #{params[:sel_name]}"
      = partial :tables, locals: {table_class: "display", table_id:"show_table", choice:"#{params[:set_name]}", first_data_to_display:@datasets, second_data_to_display:@datasets.where(:selection_name => "#{params[:sel_name]}")}  


