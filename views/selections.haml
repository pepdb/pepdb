%table{:border => 1, :id => "select_table", :data=>{:first_choice => "#{params[:sel_name]}"}}
  %tr 
  - @selections.first.each do |name|
    %th= name[0].to_s.tr('_', ' ')
  %tr
  - @selections.each do |selection|
    - selection.each do |column|
      %td= column[1]
    %tr       

- if params.size != 0
  %p 
    sequencing datasets in selection 
    = params[:sel_name]
  %table{:border => 1, :id=>'show_table', :data=>{:second_choice=>"#{params[:set_name]}"}}
    %tr 
    - @datasets.first.each do |name|
      %th= name[0].to_s.tr('_', ' ')
    %tr    
    - @datasets.where(:selection_name => "#{params[:sel_name]}").each do |dataset|
      - dataset.each do |column|
        %td= column[1]
      %tr

  - if params.size > 3
    %p
      all data on dataset
      = params[:set_name]
    %table{:border => 1}
      %tr
        - @dataset_info.where(:dataset_name => "#{params[:set_name]}").each do |info|
          - info.each do |column|
            %td= column[0].to_s.tr('_', ' ')
            %td= column[1]
            %tr 

